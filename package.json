{
  "name": "jsonlogic-transformer",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "author": "Prem Anand Topno",
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && tsc && vite build",
    "commit": "git-cz",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky install",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --config='./jest.ci-config.ts'"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@eslint/js": "^9.5.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.7",
    "commitizen": "^4.3.0",
    "eslint": "~9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.6.0",
    "husky": "^9.0.11",
    "inquirer": "8",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.13.1",
    "vite": "^5.3.1"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "react-querybuilder": "^7.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/premaddx/jsonlogic-transformer.git"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
